<span id="reload-header" data-reload-value="true" style="{display:none}"></span>
<ul class="breadcrumb">
	<li class="active">Music &amp; Me</li>
</ul>
<section id="my-streams">
	<div class="page-header">
		<h1>Mes flux</h1>
	</div>
	<div class="row">
		<div class="span12">
			<ul class="thumbnails">
				<li class="span2">
					<div class="thumbnail create-stream tip" data-placement="bottom" rel="popover" data-original-title="CrÃ©er un nouveau flux">
						<a href="{{ path('MTIMusicAndMeBundle_streamCreate') }}"><img src="/images/add.png" alt="" /></a>
					</div>
				</li>
				{% for stream in my_streams %}
				<li class="span2">
					<div class="thumbnail actual-stream">
						<a href="{{ path('MTIMusicAndMeBundle_streamView') }}/{{ stream.id }}"><img src="/images/cover.jpg" alt="" /></a>
						<div class="caption">
							<h5>{{ stream.name }}</h5>
							<p style="display: none;" class="stream-id">{{ stream.id }}</p>
							<p class="music-name">Aucune lecture en cours</p>
							<p class="music-artist"></p>
							<p class="music-album"></p>
						</div>
					</div>
				</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</section>
