{% extends 'MTIMusicAndMeBundle:BaseHTML:base.html.twig' %}

{% block content %}
	<ul class="breadcrumb">
		<li>
			<a href="{{ path('MTIMusicAndMeBundle_homepage') }}">Music &amp; Me</a> <span class="divider">/</span>
		</li>
		<li class="active">Mes flux</li>
	</ul>
	<section id="my-streams">
		<div class="page-header">
			<h1>Mes flux</h1>
		</div>
		<div class="row">
			<div class="span12">
				<ul class="thumbnails">
					<li class="span2">
						<div class="thumbnail create-stream tip" data-placement="bottom" rel="popover" data-original-title="CrÃ©er un nouveau flux">
							<a href="{{ path('MTIMusicAndMeBundle_streamCreate') }}"><img src="/images/add.png" alt="" /></a>
						</div>
					</li>
					{% for stream in my_streams %}
					<li class="span2">
						<div class="thumbnail">
						<a href="{{ path('MTIMusicAndMeBundle_streamView') }}/{{ stream.id }}"><img src="{% if currentSong[stream.id] %}{{ currentSong[stream.id].music.album.getCoverPath() }}{% else %}/images/placeholder.png{% endif %}" alt="" /></a>
							<div class="caption">
								<h5>{{ stream.name }}</h5>
								<p>{% if currentSong[stream.id] %}{{ currentSong[stream.id].music.title }}{% else %}Aucune musique{% endif %}</p>
							</div>
						</div>
					</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</section>
{% endblock %}
