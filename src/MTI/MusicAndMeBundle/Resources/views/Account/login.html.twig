{% extends 'MTIMusicAndMeBundle:BaseHTML:base.html.twig' %}

{% block title %}{{ parent() }} - Connexion{% endblock %}

{% block content %}
	<form action="{{ path('MTIMusicAndMeBundle_login') }}" method="post" {{ form_enctype(form) }}>
		<div id="form">
			<div class="title">Connexion</div>
			{% if login_error %}
			<div>
				<div class="form-errors">
					<ul>
						<li class="center">{{ login_error }}</li>
					</ul>
				</div>
			</div>
			{% endif %}
			<div>
				{% if form_errors(form.email) %}
				<div class="form-errors">{{ form_errors(form.email) }}</div>
				{% endif %}
				{{ form_label(form.email, 'Adresse email') }}{{ form_widget(form.email) }}
			</div>
				{% if form_errors(form.password) %}
				<div class="form-errors">{{ form_errors(form.password) }}</div>
				{% endif %}
				{{ form_label(form.password, 'Mot de passe') }}{{ form_widget(form.password) }}
			</div>
			<div id="validate-container">
				<input value="Connexion Ã  mon compte" type="submit" />
			</div>
		</div>
	</form>
{% endblock %}
